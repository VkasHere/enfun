<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/bluee"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragments.explorefrg.rv1.rv1full.test11">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/bluee"
        android:layout_height="70dp">
        <LinearLayout
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/bck"
                android:src="@drawable/back"
                android:layout_marginLeft="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BACK"
                android:textColor="#000"
                android:fontFamily="@font/nunito_sans_semibold"
                android:textSize="17dp" />
        </LinearLayout>


    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.airbnb.lottie.LottieAnimationView
                    android:layout_width="match_parent"
                    android:layout_height="250sp"
                    app:lottie_rawRes="@raw/anim1"
                    app:lottie_autoPlay="true"
                    app:lottie_loop="true"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1/5"
                    android:textColor="@color/greyy"
                    android:fontFamily="@font/open_sans_semibold"
                    android:textSize="15sp"
                    />
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_margin="10sp"
                android:background="@drawable/gra"
                android:layout_height="100sp">
                <TextView
                    android:id="@+id/ques"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="What is the capital of India? "
                    android:layout_marginLeft="5sp"
                    android:textColor="@color/white"
                    android:layout_marginTop="5sp"
                    android:fontFamily="@font/lato_bold"
                    android:textSize="20dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/option_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35sp"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/opt1"
                    android:layout_width="240sp"
                    android:layout_height="45sp"
                    android:background="@drawable/opback"
                    android:fontFamily="@font/open_sans"
                    android:gravity="center"
                    android:text="Delhi"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/opt2"
                    android:layout_width="240sp"
                    android:layout_height="45sp"
                    android:layout_marginTop="15sp"
                    android:background="@drawable/opback"
                    android:fontFamily="@font/open_sans"
                    android:gravity="center"
                    android:text="Mumbai"
                    android:textSize="22sp" />


                <TextView
                    android:id="@+id/opt3"
                    android:layout_width="240sp"
                    android:layout_height="45sp"
                    android:layout_marginTop="15sp"
                    android:background="@drawable/opback"
                    android:fontFamily="@font/open_sans"
                    android:gravity="center"
                    android:text="Hariyana"
                    android:textSize="22sp"

                    />

                <TextView
                    android:id="@+id/opt4"
                    android:layout_width="240sp"
                    android:layout_height="45sp"
                    android:layout_marginTop="15sp"
                    android:background="@drawable/opback"
                    android:fontFamily="@font/open_sans"
                    android:gravity="center"
                    android:text="Rajasthan"

                    android:textSize="22sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100sp"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="120sp"
                    android:layout_height="45sp"
                    android:textSize="20sp"
                    android:text="Quit"
                    android:id="@+id/quit"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/gra"
                    android:fontFamily="@font/open_sans"
                    android:layout_marginTop="10sp"/>
                <TextView
                    android:layout_width="120sp"
                    android:layout_height="45sp"
                    android:textSize="20sp"
                    android:text="Next"
                    android:enabled="false"
                    android:alpha="0.7"
                    android:backgroundTint="@color/bfg"
                    android:layout_marginLeft="100sp"
                    android:id="@+id/next"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/gra"
                    android:fontFamily="@font/open_sans"
                    android:layout_marginTop="10sp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    </LinearLayout>


