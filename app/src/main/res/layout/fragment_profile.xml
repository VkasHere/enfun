<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f6fc"
    tools:context=".Fragments.Profile">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/lay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:background="@color/bluee"
                android:layout_height="wrap_content"
                android:padding="15dp"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="60dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/prof"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    >

                </de.hdodenhof.circleimageview.CircleImageView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_gravity="center"
                    android:orientation="vertical" >
                    <TextView
                        android:id="@+id/top"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/nunito_sans_semibold"
                        android:text=".........." />

                </LinearLayout>


            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:background="#f5f6fc">

                <LinearLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:src="@drawable/pro" />
                    <LinearLayout
                        android:layout_marginLeft="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="Name" />
                        <TextView
                            android:layout_marginTop="10dp"
                            android:id="@+id/nm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="19sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/open_sans"
                            android:text="--------" />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:src="@drawable/idcard" />
                    <LinearLayout
                        android:layout_marginLeft="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="Username" />
                        <TextView
                            android:id="@+id/unm"
                            android:layout_marginTop="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="19sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/open_sans"
                            android:text="--------" />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:padding="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:src="@drawable/mobilephone" />
                    <LinearLayout
                        android:layout_marginLeft="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="Mobile no." />
                        <TextView
                            android:id="@+id/mon"
                            android:layout_marginTop="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="19sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/open_sans"
                            android:text="---------" />
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:padding="10sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="30sp"
                        android:layout_height="30sp"
                        android:src="@drawable/email" />
                    <LinearLayout
                        android:layout_marginLeft="10sp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:text="Email" />
                        <TextView
                            android:id="@+id/eml"
                            android:layout_marginTop="10sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="19sp"
                            android:textColor="@color/black"
                            android:fontFamily="@font/open_sans"
                            android:text="-------------" />

                    </LinearLayout>



                </LinearLayout>
                <TextView
                    android:id="@+id/edit"
                    android:layout_width="140sp"
                    android:layout_height="50sp"
                    android:layout_marginTop="10sp"
                    android:layout_marginBottom="5sp"
                    android:background="@drawable/gra"
                    android:layout_gravity="center"
                    android:text="Edit"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:fontFamily="@font/nunito_sans_semibold"
                    android:textColor="#fff"
                    android:transitionName="anim_go" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:background="#f5f6fc"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250sp"
                    android:scaleType="fitXY"
                    android:src="@drawable/bacd"
                    />
            </LinearLayout>
        </LinearLayout>



    </LinearLayout>

</ScrollView>


</FrameLayout>